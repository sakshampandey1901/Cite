# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cognitive_assistant
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=cognitive-assistant

# LLM Provider (Groq)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama3-8b-8192

# Embedding Provider (Hugging Face - local)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Redis (Rate Limiting & Caching)
REDIS_URL=redis://localhost:6379/0

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,md,srt,vtt
UPLOAD_DIR=/tmp/uploads

# Rate Limiting
RATE_LIMIT_UPLOAD=10/hour
RATE_LIMIT_ASSIST=30/hour

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO
